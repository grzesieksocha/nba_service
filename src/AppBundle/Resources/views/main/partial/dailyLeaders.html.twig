<h3 class="text-center">Daily Leaders ({{ yesterday }} EST)</h3>
{% if dailyLeader is not null %}
    <h4 class="bg-success text-center leader">Daily leader (pts + reb + ast) <br><br> {{ dailyLeader.firstName }} {{ dailyLeader.lastName }} - {{ dailyLeader.total }} pts</h4>
    <table class="table">
        <thead>
            <tr>
                <th class="text-center">Stat</th>
                <th class="text-center">Player</th>
                <th class="text-center">Value</th>
            </tr>
        </thead>
        <tbody>
        {% for key, stat in dailyLeaders %}
            <tr>
                <td class="text-center">{{ key }}</td>
                <td class="text-center">{{ stat.player }}</td>
                <td class="text-center">{{ stat.value }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% else %}
    <h4 class="text-center">No games yesterday (or no leaders)!</h4>
{% endif %}