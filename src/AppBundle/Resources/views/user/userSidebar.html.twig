{% set leagues = active_leagues_provider.getLeaguesForUser() %}

<a href="{{ path('league_join') }}" class="list-group-item">Join a league</a>
<a href="{{ path('league_add') }}" class="list-group-item">Create a league</a>
{% if leagues != null %}
    <a href="{{ path('league_list') }}" class="list-group-item">Active leagues</a>
        <ul class="list-group inner">

        {% for league in leagues %}
            {# var league \AppBundle\Entity\League #}
            <a href="{{ path('league_show', {'id': league.id}) }}" class="list-group-item">{{ league.name }}</a>
        {% endfor %}
        </ul>
{% else %}
    <p>You do not have active leagues yet!</p>
{% endif %}
<a href="{{ path('pick_new') }}" class="list-group-item">Pick a player</a>
<a href="{{ path('match_list') }}" class="list-group-item">Matches</a>